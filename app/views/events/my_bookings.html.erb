<div class="container">
  <div class="list-group">
      <h3>My bookings (<%= @bookings.count%>):</h3>
      <br>
      <% if @bookings.blank? %>
        <p>You haven't booked any event yet!</p>
      <% else %>
        <%  @bookings.each do |booking| %>
          <div class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><strong><%= booking.event.name %></strong></h5>
              <small>You paid: â‚¬<%= booking.event.price %></small>
            </div>
            <div class="d-flex w-100 justify-content-between">
              <p class="mb-1"><em>Where?</em> <%= booking.event.location %></p>
              <p class="mb-1"><em>When?</em> <%= booking.event.start %></p>
              <p>Status: <%= booking.status %></p>
              <p><%= link_to 'Cancel', booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel your booking?"}, class: 'text-danger' %></small></p>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
  <br>
  <%= link_to 'Back To Events', events_path, class: 'btn btn-confirm' %>
</div>